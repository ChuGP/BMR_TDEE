#include <stdio.h>
#include "system.h"
#include "altera_avalon_pio_regs.h"

int Bmr(int sex, int height, int weight, int year) {
	int num = 0;
	if (sex == 1){
	  num = (height*6+
			height/4)+
			weight*10-
			year*5+
			5;
	}
	else{
	  num = (height*6+
			height/4)+
			weight*10-
			year*5-
			161;
	}
}

int Tdee(int bmr, int level){
	int tdee = 0 ;
	if( level == 1 )
		tdee = bmr + bmr/5 ;
	if( level == 2 )
		tdee = bmr + (bmr*3)/8 ;
	if( level == 3 )
		tdee = bmr + (bmr*11)/20 ;
	if( level == 4 )
		tdee = bmr + (bmr*29)/40 ;
	if( level == 5 )
		tdee = bmr + (bmr*9)/10 ;
	return tdee ;
}

int Separate( int num, int i ){
	if( i == 0 )
		num = num/1000;
	if( i == 1)
		num = (num%1000)/100 ;
	if( i == 2 )
		num = (num%100)/10 ;
	if( i == 3 )
		num = num%10;
	return num;
}

void Show( int num ){
	int i = 0 ;
	int view = 0 ;
	while( i < 4 ){
	    view = Separate(num , i);
	    if(view == 0 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x00);
	    	printf("0");
	    }
	    if(view == 1 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x01);
	    	printf("1");
	    }
	    if(view == 2 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x02);
	    	printf("2");
	    }
	    if(view == 3 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x03);
	    	printf("3");
	    }
	    if(view == 4 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x04);
	    	printf("4\n");
	    }
	    if(view == 5 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x05);
	    	printf("5");
	    }
	    if(view == 6 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x06);
	    	printf("6");
	    }
	    if(view == 7 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x07);
	    	printf("7");
	    }
	    if(view == 8 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x08);
	    	printf("8");
	    }
	    if(view == 9 ){
	    	IOWR_ALTERA_AVALON_PIO_DATA(PIO_LED_BASE, 0x09);
	    	printf("9");
	    }
	    i++;
	}
	return;
}

